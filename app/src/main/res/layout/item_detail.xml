<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" style="@style/ReaderTheme"
                android:paddingTop="5dp" android:paddingBottom="5dp" android:paddingLeft="20dp"
                android:paddingRight="20dp">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tw_date" android:layout_weight="1" android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" android:textSize="18dp" android:textColor="@color/normal_fg"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tw_time" android:layout_weight="1" android:layout_alignParentLeft="false"
            android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:textSize="18dp"
            android:textColor="@color/normal_fg"/>
</RelativeLayout>