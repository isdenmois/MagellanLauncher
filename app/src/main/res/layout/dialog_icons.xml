<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" style="@style/ReaderTheme">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/icons_up" android:src="@drawable/ci_arrowup"
            style="@style/ButtonStyle"
            android:background="@drawable/small_shadow"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/icons_down" android:layout_weight="1" android:src="@drawable/ci_arrowdown"
            style="@style/ButtonStyle"
            android:background="@drawable/small_shadow"/>
    </LinearLayout>
    <GridView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gw_icons" android:numColumns="auto_fit"/>
</LinearLayout>