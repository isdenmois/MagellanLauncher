<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal" android:id="@+id/nowRead" android:background="@drawable/shadow_2px_black" android:longClickable="false" android:layout_width="fill_parent" android:layout_height="fill_parent" android:baselineAligned="false" android:onClick="onClick"
              xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="200.0dip"
            android:layout_height="wrap_content"
        >
        <ImageView
                android:layout_gravity="center"
                android:id="@+id/imgBook"
                android:background="@drawable/shadow_button"
                android:padding="10.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/book_img"
                android:layout_centerInParent="true"
                android:maxHeight="150dip"
        />
        <ProgressBar
                android:layout_gravity="center_horizontal"
                android:id="@+id/pbProgress"
                android:layout_width="fill_parent"
                android:layout_height="8dp"
                android:indeterminate="false"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/imgBook"
                android:layout_marginTop="70dp"
                />
        <TextView android:textSize="20.0dip" android:textColor="@color/normal_text" android:layout_gravity="center_horizontal" android:id="@+id/twProgress" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="(1/10)"
                  android:layout_centerHorizontal="true" android:layout_below="@+id/pbProgress"
                  android:layout_marginTop="10dp"/>
    </RelativeLayout>
    <RelativeLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="10.0dip" android:layout_weight="2.0">
        <TextView android:textSize="@dimen/tsize" android:textColor="@color/normal_text" android:layout_gravity="center_horizontal" android:id="@+id/txtNow" android:paddingLeft="10.0dip" android:paddingRight="10.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/now_reading"
                  android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
                  />
        <TextView android:textSize="@dimen/tsize" android:textColor="@color/normal_text" android:ellipsize="end" android:gravity="center_vertical" android:layout_gravity="center_horizontal" android:id="@+id/txtAuthor" android:paddingLeft="10.0dip" android:paddingRight="10.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Author" android:lines="1"
                  android:layout_centerInParent="true"/>
        <TextView android:textSize="@dimen/tsize" android:textStyle="bold" android:textColor="@color/normal_text" android:ellipsize="end" android:layout_gravity="center_horizontal" android:id="@+id/txtTitle" android:paddingLeft="10.0dip" android:paddingRight="10.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Title"
                  android:layout_below="@+id/txtAuthor"
                  android:layout_centerHorizontal="true" android:layout_marginTop="100dp"/>
        <TextView android:textSize="@dimen/textsize" android:textColor="@color/normal_text" android:layout_gravity="center_horizontal" android:id="@+id/twReadTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1ч 38м/6ч 10м"
                  android:layout_below="@+id/txtTitle" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</LinearLayout>