<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_httpd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="isden.mois.magellanlauncher.activities.HTTPDActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Устройство не подкючено к точке доступа!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textSSID"
                android:textAlignment="center"
                android:textColor="@color/normal_text"
                android:layout_alignParentTop="true"/>

            <TextView
                android:text="http://10.0.0.235:8080"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textIP"
                android:textAlignment="center"
                android:textColor="@color/normal_text"
                android:layout_below="@+id/textSSID"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@color/normal_transparent"
                android:id="@+id/imageView"
                android:layout_below="@+id/textIP"
                android:layout_marginTop="20dp"/>

            <Button
                android:text="Проверить обновления"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkForUpdates"
                android:layout_alignParentBottom="true"
                android:onClick="onClick"/>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
