<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_httpd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="isden.mois.magellanlauncher.activities.HTTPDActivity"
>

    <Button
        android:id="@+id/checkForUpdates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shadow_button"
        android:onClick="onClick"
        android:text="Проверить обновления" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkForUpdates"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:background="@drawable/shadow_button"
        android:checked="true"
        android:text="ToggleButton"
        android:textOff="Включить WIFI"
        android:textOn="Выключить WIFI" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/httpdInfo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/checkForUpdates">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_height="37dp"
                app:srcCompat="@drawable/wifi"
                android:id="@+id/imageView2"
                android:layout_width="36dp"
                android:layout_marginRight="30dp"/>

            <TextView
                android:text="Устройство не подкючено к точке доступа!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textSSID"
                android:textAlignment="center"
                android:textColor="@color/normal_text"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_height="37dp"
                app:srcCompat="@drawable/react"
                android:id="@+id/imageView3"
                android:layout_width="34dp"
                android:layout_marginRight="30dp"/>

            <TextView
                android:text="http://10.0.0.235:8080"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textIP"
                android:textAlignment="inherit"
                android:textColor="@color/normal_text"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@color/normal_transparent"
            android:id="@+id/imageView"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</RelativeLayout>
